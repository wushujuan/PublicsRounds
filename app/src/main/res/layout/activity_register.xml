<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="cn.breaksky.rounds.publics.activity.LoginActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="216dp"
            android:layout_height="50dp"
            android:background="@drawable/main_log"
            android:contentDescription="@string/empty_str" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="490dp"
            android:background="@drawable/login_info_bg"
            android:gravity="center|center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/reister_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/register_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_mobile" >
                </TextView>

                <EditText
                    android:id="@+id/reister_mobile"
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="phone"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_mobile_verify" >
                </TextView>

                <EditText
                    android:id="@+id/reister_mobile_verify"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:singleLine="true" >
                </EditText>

                <Button
                    android:id="@+id/register_mobile_verify_button"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/login_button_bg"
                    android:text="@string/register_mobile_verify_button"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_password" >
                </TextView>

                <EditText
                    android:id="@+id/reister_password"
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_name" >
                </TextView>

                <EditText
                    android:id="@+id/reister_name"
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="textPersonName"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_idcard" >
                </TextView>

                <EditText
                    android:id="@+id/reister_idcard"
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="text"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_age" >
                </TextView>

                <EditText
                    android:id="@+id/reister_age"
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_sex" >
                </TextView>

                <RadioGroup
                    android:id="@+id/reister_sex"
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/reister_sex_man"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/register_sex_man" />

                    <RadioButton
                        android:id="@+id/reister_sex_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:text="@string/register_sex_woman" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_region" >
                </TextView>

                <Button
                    android:id="@+id/reister_region_button"
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/login_button_bg"
                    android:text="@string/register_region_button"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@color/white"
                    android:gravity="center|center"
                    android:text="@string/register_address" >
                </TextView>

                <EditText
                    android:id="@+id/reister_address"
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="text"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/login_button_bg"
                    android:text="@string/register_button"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_button_bg"
                    android:text="@string/register_cancel_button"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</FrameLayout>