<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@drawable/app_ico" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical" >

            <TextView
                style="@style/NotificationInfo"
                android:id="@+id/widget_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:text="@string/app_name"
                android:textSize="12sp" />

            <TextView
                style="@style/NotificationInfo"
                android:id="@+id/widget_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:text="@string/app_copyright"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            style="@style/NotificationInfo"
            android:id="@+id/widget_photo_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text="@string/widget_photo_alarm"
            android:textSize="12sp" />
        <Button
            style="@style/NotificationInfo"
            android:id="@+id/widget_voice_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text="@string/widget_voice_alarm"
            android:textSize="12sp" />
        
        <Button
            style="@style/NotificationInfo"
            android:id="@+id/widget_video_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text="@string/widget_video_alarm"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>