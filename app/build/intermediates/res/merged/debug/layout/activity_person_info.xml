<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    tools:context="cn.breaksky.rounds.publics.activity.PersonInfoActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/title_bg"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/person_info_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="@string/title_back"
            android:textColor="@color/white"
            android:textSize="18dp" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/title_person_info"
                android:textSize="18dp" >
            </TextView>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        android:gravity="center|top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/person_info_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/register_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_mobile" >
            </TextView>

            <TextView
                android:id="@+id/person_info_mobile"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="left|center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_password_old" >
            </TextView>

            <EditText
                android:id="@+id/person_info_password_old"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:inputType="textVisiblePassword"
                android:singleLine="true" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_password_new" >
            </TextView>

            <EditText
                android:id="@+id/person_info_password_new"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:inputType="textVisiblePassword"
                android:singleLine="true" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_name" >
            </TextView>

            <TextView
                android:id="@+id/person_info_name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="left|center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_idcard" >
            </TextView>

            <TextView
                android:id="@+id/person_info_idcard"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="left|center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_age" >
            </TextView>

            <EditText
                android:id="@+id/person_info_age"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:singleLine="true" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_sex" >
            </TextView>

            <TextView
                android:id="@+id/person_info_sex"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="left|center"
                android:text="男" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="@string/person_info_address" >
            </TextView>

            <EditText
                android:id="@+id/person_info_address"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:inputType="text"
                android:singleLine="true" >
            </EditText>
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/white"
                android:gravity="center|center"
                android:text="分   组:" >
            </TextView>

            <TextView
                android:id="@+id/person_info_groupname"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="left|center" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/person_info_modify_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/login_button_bg"
            android:text="@string/person_info_modify_button"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>